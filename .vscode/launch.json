{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/${input:projectName}/bin/Debug/net9.0/${input:projectName}.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/${input:projectName}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "preLaunchTask": "build",
            "justMyCode": false,
            "requireExactSource": false,
            "enableStepFiltering": false
        },
        {
            "name": ".NET Core Launch (console) - External Terminal",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/${input:projectName}/bin/Debug/net9.0/${input:projectName}.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/${input:projectName}",
            "console": "externalTerminal",
            "stopAtEntry": false,
            "preLaunchTask": "build"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "inputs": [
        {
            "id": "projectName",
            "description": "Select project to launch",
            "type": "pickString",
            "options": [
                "169-Majority-Element",
                "1768-Merge-Strings-Alternately",
                "121-Best-Time-to-Buy-and-Sell-Stock"
            ]
        }
    ]
}
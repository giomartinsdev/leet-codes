{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/${input:projectName}/${input:projectName}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/${input:projectName}/${input:projectName}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/${input:projectName}/${input:projectName}.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        }
    ],
    "inputs": [
        {
            "id": "projectName",
            "description": "Select project to build",
            "type": "pickString",
            "options": [
                "169-Majority-Element",
                "1768-Merge-Strings-Alternately"
            ]
        }
    ]
}
